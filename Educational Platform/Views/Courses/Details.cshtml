						<td>
							@Html.DisplayFor(model => model.CourseHours)
						</td>
					</tr>
					<tr scope="row">
						<td>
							@Html.DisplayNameFor(model => model.CoursePrice)
						</td>
						<td>
							@Html.DisplayFor(model => model.CoursePrice)
						</td>
