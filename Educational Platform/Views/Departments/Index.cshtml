@model IEnumerable<Educational_Platform.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/course.css" />

<div class="content">
	<div class="container">
		<div class="table-responsive custom-table-responsive">
			<table class="table custom-table">
				<thead>
					<tr>
						<th scope="col">
						    @Html.DisplayNameFor(model => model.DepartmentName)
						</th>
						<th scope="col">
							 @Html.DisplayNameFor(model => model.DepartmentDescription)
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr scope="row">

							<td>
 @Html.DisplayFor(modelItem => item.DepartmentName)							</td>
							<td>
                @Html.DisplayFor(modelItem => item.DepartmentDescription)
							</td>
							
						
							<td>
								<a asp-action="Edit" asp-route-id="@item.DepartmentID">Edit</a> |
								<a asp-action="Details" asp-route-id="@item.DepartmentID">Details</a> |
								<a asp-action="Delete" asp-route-id="@item.DepartmentID">Delete</a>
							</td>


						</tr>
						<tr class="spacer">
							<td colspan="100"></td>
						</tr>
					}
				</tbody>
			</table>
			<p class="text-center">
				<a asp-action="Create" class="btn btn-warning ">Create New</a>
			</p>
		</div>
	</div>
</div>




